" dont be vi compatible
set nocompatible

" syntax hightlighting
syntax on

" colorscheme
colorscheme desert

" line numbers
set number

" file stats
set ruler

" encoding
set encoding=utf-8

" line wrap
set wrap

" maximum width of a line
set textwidth=79

" number of space after tab key is pressed
set tabstop=4

" number of space for indentation
set shiftwidth=4

" tab to spaces
set expandtab

" indentation
set autoindent
set smartindent
filetype plugin indent on

" highlight search
set hlsearch

" incremental search
set incsearch

" case insesitive
set ignorecase


